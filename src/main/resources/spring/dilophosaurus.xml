<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="dilophosaurus" class="rottingalien.theisledmgcalc.dinoinfo.Dino">

        <property name="name" value="Dilophosaurus"/>
        <property name="growthStateMap">
            <map>
                <entry key="freshJuvi" value-ref="dilophosaurusFreshJuvi"/>
                <entry key="fullJuvi" value-ref="dilophosaurusFullJuvi"/>
                <entry key="freshAdult" value-ref="dilophosaurusFreshAdult"/>
                <entry key="fullAdult" value-ref="dilophosaurusFullAdult"/>
            </map>
        </property>
    </bean>

    <!-- JUVENILE !-->

    <bean id="dilophosaurusFreshJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="150"/>
                <entry key="health" value="250"/>
                <entry key="biteforce" value="27"/>
                <entry key="bleed" value="20"/>
                <entry key="bleedStandResist" value="50"/>
                <entry key="bleedSitResist" value="25"/>
                <entry key="bleedWalkResist" value="80"/>
                <entry key="bleedRunResist" value="100"/>

            </map>
        </property>
    </bean>

    <bean id="dilophosaurusFullJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="900"/>
                <entry key="health" value="650"/>
                <entry key="biteforce" value="70"/>
                <entry key="bleed" value="20"/>
                <entry key="bleedStandResist" value="50"/>
                <entry key="bleedSitResist" value="25"/>
                <entry key="bleedWalkResist" value="80"/>
                <entry key="bleedRunResist" value="100"/>
            </map>
        </property>
    </bean>

    <!-- ADULT !-->

    <bean id="dilophosaurusFreshAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="900"/>
                <entry key="health" value="650"/>
                <entry key="biteforce" value="75"/>
                <entry key="bleed" value="50"/>
                <entry key="bleedStandResist" value="25"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="100"/>
            </map>
        </property>
    </bean>

    <bean id="dilophosaurusFullAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="1200"/>
                <entry key="health" value="1050"/>
                <entry key="biteforce" value="150"/>
                <entry key="bleed" value="50"/>
                <entry key="bleedStandResist" value="25"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="100"/>
            </map>
        </property>
    </bean>
</beans>
