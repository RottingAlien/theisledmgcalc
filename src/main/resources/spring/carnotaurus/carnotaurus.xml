<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="carnovalues.xml"/>

    <bean id="carnotaurus" class="rottingalien.theisledmgcalc.dinoinfo.Dino">

        <property name="name" value="Carnotaurus"/>
        <property name="growthStateMap">
            <map>
                <entry key="freshJuvi" value-ref="carnotaurusFreshJuvi"/>
                <entry key="fullJuvi" value-ref="carnotaurusFullJuvi"/>
                <entry key="freshAdult" value-ref="carnotaurusFreshAdult"/>
                <entry key="fullAdult" value-ref="carnotaurusFullAdult"/>
            </map>
        </property>
    </bean>

    <!-- JUVENILE !-->

    <bean id="carnotaurusFreshJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="150"/>
                <entry key="health" value="120"/>
                <entry key="biteforce" value="50"/>
                <entry key="bleed" value="15"/>
                <entry key="bleedStandResist" value="30"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="100"/>

            </map>
        </property>
    </bean>

    <bean id="carnotaurusFullJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="850"/>
                <entry key="health" value="350"/>
                <entry key="biteforce" value="75"/>
                <entry key="bleed" value="15"/>
                <entry key="bleedStandResist" value="30"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="100"/>
            </map>
        </property>
    </bean>

    <!-- ADULT !-->

    <bean id="carnotaurusFreshAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="880"/>
                <entry key="health" value="350"/>
                <entry key="biteforce" value="75"/>
                <entry key="bleed" value="15"/>
                <entry key="bleedStandResist" value="70"/>
                <entry key="bleedSitResist" value="20"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="60"/>
            </map>
        </property>
    </bean>

    <bean id="carnotaurusFullAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="2170"/>
                <entry key="health" value="2170"/>
                <entry key="biteforce" value="200"/>
                <entry key="bleed" value="15"/>
                <entry key="bleedStandResist" value="70"/>
                <entry key="bleedSitResist" value="20"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="60"/>
            </map>
        </property>
    </bean>
</beans>
