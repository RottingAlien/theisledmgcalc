<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="utahraptor" class="rottingalien.theisledmgcalc.dinoinfo.Dino">

        <property name="name" value="Utahraptor"/>
        <property name="growthStateMap">
            <map>
                <entry key="freshJuvi" value-ref="utahraptorFreshJuvi"/>
                <entry key="fullJuvi" value-ref="utahraptorFullJuvi"/>
                <entry key="freshAdult" value-ref="utahraptorFreshAdult"/>
                <entry key="fullAdult" value-ref="utahraptorFullAdult"/>
            </map>
        </property>
    </bean>

    <!-- JUVENILE !-->

    <bean id="utahraptorFreshJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="60"/>
                <entry key="health" value="25"/>
                <entry key="biteforce" value="10"/>
                <entry key="bleed" value="5"/>
                <entry key="bleedStandResist" value="50"/>
                <entry key="bleedSitResist" value="25"/>
                <entry key="bleedWalkResist" value="80"/>
                <entry key="bleedRunResist" value="100"/>

            </map>
        </property>
    </bean>

    <bean id="utahraptorFullJuvi" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Juvenile"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="600"/>
                <entry key="health" value="100"/>
                <entry key="biteforce" value="40"/>
                <entry key="bleed" value="10"/>
                <entry key="bleedStandResist" value="50"/>
                <entry key="bleedSitResist" value="25"/>
                <entry key="bleedWalkResist" value="80"/>
                <entry key="bleedRunResist" value="100"/>
            </map>
        </property>
    </bean>

    <!-- ADULT !-->

    <bean id="utahraptorFreshAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Fresh Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="250"/>
                <entry key="health" value="300"/>
                <entry key="biteforce" value="60"/>
                <entry key="bleed" value="10"/>
                <entry key="bleedStandResist" value="20"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="70"/>
            </map>
        </property>
    </bean>

    <bean id="utahraptorFullAdult" class="rottingalien.theisledmgcalc.dinoinfo.GrowthState">
        <property name="name" value="Full Adult"/>
        <property name="dinoPropertyMap">
            <map>
                <entry key="weight" value="1000"/>
                <entry key="health" value="1200"/>
                <entry key="biteforce" value="200"/>
                <entry key="bleed" value="20"/>
                <entry key="bleedStandResist" value="20"/>
                <entry key="bleedSitResist" value="10"/>
                <entry key="bleedWalkResist" value="50"/>
                <entry key="bleedRunResist" value="70"/>
            </map>
        </property>
    </bean>
</beans>
